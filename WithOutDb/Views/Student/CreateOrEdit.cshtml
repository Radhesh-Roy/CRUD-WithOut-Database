@model WithOutDb.Models.Student
@{

}

<div class="container">
    <form asp-action="CreateOrEdit" asp-controller="Student" method="post">
        <div class="form-group row mt-2">
            <label for="inputRoll3" class="col-sm-2 col-form-label">Roll</label>
            <div class="col-sm-10">
                <input asp-for="Roll" type="number" class="form-control" id="inputRoll3" placeholder="Roll">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="inputName3" class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" id="inputName3" placeholder="Name">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="inputDepartment4" class="col-sm-2 col-form-label">Department</label>
            <div class="col-sm-10">
                <input asp-for="Department" type="text" class="form-control" id="inputDepartment4" placeholder="Department">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="inputSemister4" class="col-sm-2 col-form-label">Semister</label>
            <div class="col-sm-10">
                <input asp-for="Semister" type="text" class="form-control" id="inputSemister4" placeholder="Department">
            </div>
        </div>
        <div class="form-group row mt-2">
            <label for="inputEmail4" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input asp-for="Email" type="email" class="form-control" id="inputEmail4" placeholder="Email">
            </div>
        </div>
        <div class="form-group row mt-2">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary mt-2">Submit</button>
            </div>
        </div>
    </form>
</div>
